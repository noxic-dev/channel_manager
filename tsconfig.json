{
  "compilerOptions": {
    "target": "ES2023",
    "module": "CommonJS",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "baseUrl": "./src", // Required for path aliases
    "resolveJsonModule": true,
    "paths": {
      "@/utils/*": ["./utils/*"],
      "@/commands/*": ["./commands/*"],
      "@/events/*": ["./events/*"],
      "@/types/*": ["./types/*"]
    }
  },
  "include": ["src/**/*", "src/@types/**/*"]
}
